<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	
	<androidx.cardview.widget.CardView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:longClickable="true"
		app:cardCornerRadius="8dp"
		app:cardElevation="4dp">
		
		<LinearLayout
			android:layout_margin="8dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/pop_app_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:padding="8dp"
				android:minWidth="150dp"
				android:gravity="start|center"
				android:text="@string/app_info"
				android:drawablePadding="8dp"
				app:drawableTint="?attr/colorAccent"
				app:drawableLeftCompat="@drawable/ic_app_info" />
			<TextView
				android:id="@+id/pop_copy_package_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:padding="8dp"
				android:minWidth="150dp"
				android:gravity="start|center"
				android:text="@string/copy_package_name"
				android:drawablePadding="8dp"
				app:drawableTint="?attr/colorAccent"
				app:drawableLeftCompat="@drawable/ic_copy_package_name" />

			<TextView
				android:id="@+id/pop_uninstall_app"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:padding="8dp"
				android:minWidth="150dp"
				android:gravity="start|center"
				android:text="@string/uninstall_app"
				android:drawablePadding="8dp"
				app:drawableTint="?attr/colorAccent"
				app:drawableLeftCompat="@drawable/ic_uninstall_app" />

		</LinearLayout>
	
	</androidx.cardview.widget.CardView>

</FrameLayout>